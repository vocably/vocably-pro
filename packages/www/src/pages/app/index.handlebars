{{#> layout
  title='Install Mobile App'
  url='/app'
}}
  {{#> text-container }}
    <p class="h1 mb-5 text-center" id="automatically-download-mobile-app">Download your mobile app</p>
    <div class="progress" id="mobile-app-progress">
      <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
    </div>
    <div class="text-center d-none" id="mobile-app-links">
      <a id="mobile-app-ios-link" href="https://apps.apple.com/us/app/vocably-pro-language-cards/id1641258757" target="_blank" class="d-inline-block mb-2"><img src="assets/download-on-app-store.svg" alt="Download on App Store" height="60" /></a>
      <a id="mobile-app-android-link" href="https://play.google.com/store/apps/details?id=com.vocablypro" target="_blank" class="d-inline-block ms-2 mb-2"><img src="assets/get-it-on-google-play.svg" alt="Get it on Google Play" height="60" /></a>
    </div>
  {{/text-container}}
{{/layout}}
